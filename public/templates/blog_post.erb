<!-- HTML template for blog post page -->

<!DOCTYPE html>
<html>
<head>
  <meta charset='UTF-8'/>
  <link rel="icon" type="image/png" sizes="32x32" href="/icons/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/icons/favicon-16x16.png">
  <link rel="shortcut icon" href="/icons/favicon.ico">
  <link rel="stylesheet" href="/css/style.css">
  <title><%= PAGE_NAME + ' | ' + @title %></title>
</head>

<body>
  <header class="site-header" role="banner">
    <div class="fancy-wrapper">
      <a class="site-title" href='/'><%= PAGE_NAME %></a>
      <nav class="site-navigator">
        <a class="page-link" href='/archive'>Archive</a>
        <a class="page-link" href='/new_post'>New Post</a>
      </nav>
    </div>
  </header>
  <main>
    <div class="fancy-wrapper">
      <h1><%= @title %></h1>
      <div class="post-timestamp">Posted <%= @date %></div>
      <p><%= @body %></p>
    </div>
  </main>
</body>
</html>