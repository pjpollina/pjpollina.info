<h1>Edit Post</h1>
<form id="edit-post" action="" method="put" class="post-form">
  <div>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= post.title %>" readonly>
  </div>
  <div>
    <label for="slug">Slug</label>
    <input type="text" id="slug" name="slug" value="<%= post.slug %>" readonly>
  </div>
  <div>
    <label for="body">Body</label>
    <textarea type="text" id="body" name="body" required><%= post.body %></textarea>
  </div>
  <div>
    <input type="submit" id="submit" value="Update Post" style="width: 340px;">
    <button id="delete-post">Delete Post</button>
  </div>
</form>