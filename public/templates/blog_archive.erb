<!-- HTML template for blog post archive -->

<!DOCTYPE html>
<html>
<head>
  <meta charset='UTF-8'/>
  <link rel="icon" type="image/png" sizes="32x32" href="/pictures/icons/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/pictures/icons/favicon-16x16.png">
  <link rel="shortcut icon" href="/pictures/icons/favicon.ico">
  <link rel="stylesheet" href="/css/style.css">
  <title><%= @page_name + ' | Archive' %></title>
</head>

<body>
  <header class="site-header" role="banner">
    <div class="fancy-wrapper">
      <a class="site-title" href='/'><%= @page_name %></a>
      <nav class="site-navigator">
        <a class="page-link" href='/archive'>Archive</a>
        <% if @admin %><a class="page-link" href='/new_post'>New Post</a><% end %>
      </nav>
    </div>
  </header>
  <main>
    <div class="fancy-wrapper">
      <h1>Archive</h1>
      <% archive.each_key do |year| %>
        <h2><%= year %></h2>
        <ul>
        <% archive[year].each_key do |month| %>
          <li>
            <h3><%= month %></h3>
            <ul>
              <% archive[year][month].each do |post| %>
                <li><a href=<%= "'/#{post['post_slug']}'" %>><%= post['post_title'] %></a> Posted <%= post['post_timestamp'].strftime('%m/%d/%Y') %></li>
              <% end %>
            </ul>
          </li>
        <% end %>
        </ul>
      <% end %>
    </div>
  </main>
  <footer class="site-footer">
    <div class="fancy-wrapper">
      <p style="text-align: center;">&copy; 2018 PJ Pollina</p>
    </div>
  </footer>
</body>
</html>