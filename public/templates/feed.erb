<?xml version="1.0"?>
<rss version="2.0">
  <title><%= Website.config_info[:site_name] %></title>
  <link>https://<%= Website.config_info[:host_name] %>/</link>
  <description><%= Website.config_info[:site_desc] %></description>
  <% posts.each do |post| %>
  <item>
    <title><%= post[:post_title] %></title>
    <link>https://<%= Website.config_info[:host_name] %>/<%= post[:post_slug] %></link>
    <description><%= post[:post_desc] %></description>
    <pubdate><%= post[:post_timestamp].httpdate %></pubdate>
    <category><%= post[:post_category] %></category>
  </item>
  <% end %>
</rss>