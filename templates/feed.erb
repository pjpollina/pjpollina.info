<?xml version="1.0"?>
<rss version="2.0">
  <title><%= Website.config_info[:site_name] %></title>
  <link><%= Website::Utils.full_url %>/</link>
  <description><%= Website.config_info[:site_desc] %></description>
  <% posts.each do |post| %>
  <item>
    <title><%= post.title %></title>
    <link><%= Website::Utils.full_url %>/<%= post.slug %></link>
    <description><%= post.desc %></description>
    <pubdate><%= post.timestamp.httpdate %></pubdate>
    <category><%= post.category %></category>
  </item>
  <% end %>
</rss>