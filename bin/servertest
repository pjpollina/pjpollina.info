#!/usr/bin/env ruby

require 'erb'
require 'mysql2'
require './http_server.rb'
require './blog_controller.rb'

PAGE_NAME = "PJ's Site" # The name of the site

server = HTTPServer.new
controller = BlogController.new
poster = Mysql2::Client.new(username: 'blog_poster', password: File.read('password'), database: 'blog')
loop do
  server.serve do |socket|
    STDERR.puts "#{socket.request[:method]} #{socket.request[:path]} #{socket.request[:client_type]}"      # Prints recieved socket requests to console

    if(socket.request[:path].end_with?(*HTTPServer::MIME_TYPES.keys))
      socket.serve_file(socket.request[:path])
    elsif(socket.request[:path] == '/form_test')
      form = ERB.new(File.read './public/templates/blog_post_form.erb')
      socket.serve_html form.result
    elsif(socket.request[:path] == '/new_blog_post')
      socket.serve_redirect
      if(socket.request[:method] == 'POST')
        elements = HTTPServer.parse_form_data(socket.socket.gets)
        if elements['password'] == File.read('password')
          poster.query <<~SQL
            INSERT INTO posts(post_id, post_title, post_slug, post_body)
            VALUES(
              #{controller.next_post_id},
              '#{elements['title']}',
              '#{elements['slug']}',
              '#{poster.escape(elements['body'])}'
            );
          SQL
        end
      end
    else
      socket.serve_html controller.respond(socket.request[:path])
    end
  end
end
